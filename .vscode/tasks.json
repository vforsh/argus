{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build:all",
			"detail": "Builds all packages in the workspace",
			"type": "shell",
			"command": "npm run build:packages",
			"problemMatcher": ["$tsc"],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "chrome: start",
			"detail": "Launches Chrome with CDP enabled",
			"type": "shell",
			"command": "node packages/argus/dist/bin.js chrome start ${input:chromeArgs}",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "watcher: start",
			"detail": "Starts the Argus watcher with optional --page-url argument",
			"type": "shell",
			"command": "npx tsx scripts/start-watcher.ts ${input:args}",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	],
	"inputs": [
		{
			"id": "args",
			"type": "promptString",
			"description": "Additional arguments (e.g., --page-url http://...)",
			"default": ""
		},
		{
			"id": "chromeArgs",
			"type": "promptString",
			"description": "Chrome start arguments (e.g., --url http://localhost:3000 --default-profile)",
			"default": "--default-profile"
		}
	]
}
