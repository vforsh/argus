{
	"name": "argus",
	"repository": {
		"type": "git",
		"url": "https://github.com/vforsh/argus.git"
	},
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"lint": "oxlint .",
		"lint:fix": "oxlint . --fix",
		"typecheck": "tsc -b --pretty false",
		"typecheck:packages": "tsc -b packages/* --pretty false",
		"build": "tsc -b",
		"build:packages": "tsc -b packages/*",
		"chrome:start": "bun packages/argus/src/bin.ts chrome start",
		"test:e2e": "bun run build:packages && bun test e2e/",
		"playground": "bun playground/start.ts",
		"playground:serve": "bun playground/serve.ts",
		"playground:chrome": "bun packages/argus/src/bin.ts chrome start --url http://127.0.0.1:3333",
		"playground:attach": "bun packages/argus/src/bin.ts watcher start --id playground --url 127.0.0.1:3333",
		"prepare": "husky"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	},
	"devDependencies": {
		"@commitlint/cli": "20.3.1",
		"@commitlint/config-conventional": "20.3.1",
		"bun-types": "latest",
		"dotenv": "^17.2.3",
		"husky": "9.1.7",
		"lint-staged": "^16.2.7",
		"oxlint": "1.38.0",
		"playwright": "^1.57.0",
		"prettier": "3.7.4",
		"typescript": "5.9.3"
	},
	"packageManager": "bun",
	"version": "0.1.2"
}
