{
	"name": "argus",
	"repository": {
		"type": "git",
		"url": "https://github.com/vforsh/argus.git"
	},
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"lint": "oxlint .",
		"lint:fix": "oxlint . --fix",
		"typecheck": "tsc -b --pretty false",
		"typecheck:packages": "tsc -b packages/* --pretty false",
		"build": "tsc -b",
		"build:packages": "tsc -b packages/*",
		"test:e2e": "npm run build:packages && npx tsx --test e2e/**/*.test.ts",
		"prepare": "husky"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	},
	"devDependencies": {
		"@commitlint/cli": "20.3.1",
		"@commitlint/config-conventional": "20.3.1",
		"@types/node": "25.0.6",
		"dotenv": "^17.2.3",
		"husky": "9.1.7",
		"lint-staged": "^16.2.7",
		"oxlint": "1.38.0",
		"playwright": "^1.57.0",
		"prettier": "3.7.4",
		"tsx": "^4.21.0",
		"typescript": "5.9.3"
	}
}
