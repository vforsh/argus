{
	"name": "@vforsh/argus",
	"version": "0.1.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/vforsh/argus.git",
		"directory": "packages/argus"
	},
	"type": "module",
	"bin": {
		"argus": "dist/argus.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"schemas"
	],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@vforsh/argus-client": "workspace:*",
		"@vforsh/argus-core": "workspace:*",
		"@vforsh/argus-watcher": "workspace:*",
		"commander": "14.0.2"
	},
	"scripts": {
		"build": "tsc -b && bun run bundle",
		"bundle": "bun build dist/bin.js --outfile dist/argus.js --target bun",
		"typecheck": "tsc -b --pretty false",
		"chrome:start": "bun src/bin.ts chrome start"
	}
}
